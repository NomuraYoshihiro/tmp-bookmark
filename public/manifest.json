{
  "manifest_version": 2,
  "version": "1.0",
  "name": "Temporary Bookmark",
  "short_name": "Tmp B",
  "icons": {
    "16": "icons/tmp-icon-16.png",
    "48": "icons/tmp-icon-48.png",
    "128": "icons/tmp-icon-128.png"
  },
  "description": "標準のブックマークを汚さずに、一時的にブックマークしたいページを管理できます。",
  "browser_action": {
    "default_icon": {
      "16": "icons/tmp-icon-16.png",
      "24": "icons/tmp-icon-24.png",
      "32": "icons/tmp-icon-32.png"
    },
    "default_title": "Tmp Bookmark",
    "default_popup": "index.html"
  },
  "permissions": ["tabs", "storage"]
}
